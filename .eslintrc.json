{
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "tsconfigRootDir": "./",
    "project": ["./tsconfig.json", "./test/tsconfig.json", "./vite/tsconfig.json"]
  },
  "rules": {
    "prefer-destructuring": "off",
    "no-magic-numbers": "off",
    "max-params": "off",
    "@typescript-eslint/no-magic-numbers": "off",
    "@typescript-eslint/no-unsafe-call": "off"
  },
  "plugins": [
    "html",
    "@typescript-eslint"
  ]
}
